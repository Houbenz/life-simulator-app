<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ringImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/borderblacksmall"
        android:padding="8dp"
        app:srcCompat="@drawable/jewelry" />

    <TextView
        android:id="@+id/numberRing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderblacksmall"
        android:fontFamily="casual"
        android:text="01"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/offerRingbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/strong_red"
        android:fontFamily="casual"
        android:text="@string/offer_ring"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />
</LinearLayout>