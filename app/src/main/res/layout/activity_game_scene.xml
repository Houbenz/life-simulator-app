<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <ViewSwitcher
        android:id="@+id/switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">


        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.android.testsharedpreferences.GameScene">


            <RelativeLayout
                android:id="@+id/progressAll"
                android:layout_width="470dp"
                android:layout_height="74dp"

                android:layout_marginEnd="16dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/progressBar"
                    android:layout_width="410dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="156dp"
                    tools:layout_editor_absoluteY="0dp">


                    <ProgressBar
                        android:id="@+id/healthBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:indeterminate="false"
                        android:progress="100"
                        android:progressTint="@android:color/holo_red_dark" />

                    <ProgressBar
                        android:id="@+id/hungerBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="25dp"
                        android:layout_weight="1"
                        android:indeterminate="false"
                        android:progress="50"
                        android:progressTint="@android:color/holo_orange_light" />

                    <ProgressBar
                        android:id="@+id/energyBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginEnd="25dp"
                        android:layout_weight="1"
                        android:indeterminate="false"
                        android:progress="30"
                        android:progressTint="@android:color/holo_blue_light" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/progressper"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/progressBar"
                    android:layout_toEndOf="@+id/progressBar"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/healthpr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="casual"
                        android:text="100/100"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hungerpr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="casual"
                        android:text="100/100"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/energypr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="casual"
                        android:text="100/100"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/buttonsLine"
                android:layout_width="90dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/work"
                    style="@style/GameSceneButtons"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="casual"
                    android:text="@string/workButton"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/buy"
                    style="@style/GameSceneButtons"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="casual"
                    android:text="@string/buyButton"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/sleep"
                    style="@style/GameSceneButtons"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="casual"
                    android:text="@string/sleepButton"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bank"
                    style="@style/GameSceneButtons"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="casual"
                    android:text="@string/bankName"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/study"
                    style="@style/GameSceneButtons"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="casual"
                    android:text="@string/study"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="467dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressAll">

                <Button
                    android:id="@+id/startWorking"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="@string/startWork"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/workType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="@string/incomeTitle"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="0$/Day"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/balanceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="@string/balanceTitle"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="0$"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <FrameLayout
                android:id="@+id/placefragment"
                android:layout_width="500dp"
                android:layout_height="200dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="16dp"
                android:fillViewport="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/stats"
                android:layout_width="142dp"
                android:layout_height="160dp"
                android:padding="5dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonsLine"
                app:layout_constraintEnd_toStartOf="@id/progressAll"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/caracterImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/playerInfo"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_empty"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="33dp" />

                <LinearLayout
                    android:id="@+id/playerInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/borderblacksmall"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/playerN"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="casual"
                        android:text="Houbenz"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="casual"
                        android:text="00:00"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/dayView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="casual"
                        android:text="Day 000"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/levelNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="casual"
                        android:text="lvl:00"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/levelProgressBarHolder"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/playerInfo"
                    android:layout_alignTop="@+id/playerInfo"
                    android:layout_toEndOf="@+id/playerInfo"
                    android:background="@drawable/borderblacksmall"
                    android:padding="1dp">

                    <ProgressBar
                        android:id="@+id/levelProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignStart="@+id/progressLevel"
                        android:layout_below="@+id/progressLevel"
                        android:progress="55"
                        android:progressDrawable="@drawable/progressbartheme" />
                </FrameLayout>


                <TextView
                    android:id="@+id/progressLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/playerInfo"
                    android:layout_toEndOf="@+id/playerInfo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="10sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/jobName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/progressLevel"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/caracterImg"
                    android:fontFamily="casual"
                    android:text="worker"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/speedLayout"
                android:layout_width="467dp"
                android:layout_height="45dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/placefragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.51">

                <SeekBar
                    android:id="@+id/speedSeekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:max="3"
                    android:min="0" />

                <TextView
                    android:id="@+id/speedName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="casual"
                    android:text="speed"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/progressAll"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/healthIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/health_img" />

                <ImageView
                    android:id="@+id/hungerIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/hunger_img" />

                <ImageView
                    android:id="@+id/energyIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/energy_img" />
            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/blackScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/sleepText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:fontFamily="casual"
                android:text="Sleeping ..."
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </RelativeLayout>

    </ViewSwitcher>
</android.support.constraint.ConstraintLayout>